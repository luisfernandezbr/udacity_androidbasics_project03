<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/textQuestionValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:textSize="18sp"
        tools:text="What of the following colors are in the Golden State Warriors logo?"/>

    <CheckBox
        android:id="@+id/checkboxAnswer_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        tools:text="Michael Jordan"
        />

    <CheckBox
        android:id="@+id/checkboxAnswer_02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        tools:text="Stephen Curry"
        />

    <CheckBox
        android:id="@+id/checkboxAnswer_03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        tools:text="Klay Thompson"
        />

    <CheckBox
        android:id="@+id/checkboxAnswer_04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        tools:text="Andre Iguodala"
        />


</LinearLayout>