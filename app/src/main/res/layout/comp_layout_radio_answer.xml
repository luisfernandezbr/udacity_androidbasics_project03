<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textQuestionValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="@dimen/font_size_score_title"
        tools:text="What of the following player was not in the champion team in the 2015/2016 season?"/>

    <RadioGroup
        android:id="@+id/radioGroupAnswers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioButtonAnswer_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_margin_half"
            tools:text="Michael Jordan"
            />

        <RadioButton
            android:id="@+id/radioButtonAnswer_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_margin_half"
            tools:text="Stephen Curry"
            />

        <RadioButton
            android:id="@+id/radioButtonAnswer_03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_margin_half"
            tools:text="Klay Thompson"
            />

        <RadioButton
            android:id="@+id/radioButtonAnswer_04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_margin_half"
            tools:text="Andre Iguodala"
            />

    </RadioGroup>

</LinearLayout>